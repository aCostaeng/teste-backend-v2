@section scripts {
    <script src="~/js/crud_equipamento_estado_hora.js"></script>
}


<div class="container">

    <div class="mb-3">
        <div class="text-center pb-3">
            <h6 class="display-6">CRUD - Modelo estado hora</h6>
        </div>
    </div>

    <div class="row">
        <button type="button" class="btn btn-primary mb-3" id="btn-abrir-modal-estado-hora" name="btn-abrir-modal-estado-hora">Novo</button>

        <table class="table table-bordered table-hover table-sm" id="tblListaModeloEstadoHora">
            <thead>
                <tr>
                    <th>
                        Modelo
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>
                        Valor
                    </th>
                    <th>
                        Opção
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <!-- .modal -->
    <div class="modal fade" id="modal-criar-estado-hora">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title text-center">Criar</h6>
                </div>

                <div class="modal-body">

                    <div class="mb-3">
                        <label for="cmbEquipamentoModelo" class="form-label">Modelo</label>
                        <select class="form-select pb-0" id="cmbEquipamentoModelo" name="cmbEquipamentoModelo" asp-items="@(new SelectList(string.Empty, "id", "name"))">
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="cmbEquipamentoEstadoHora" class="form-label">Estado</label>
                        <select class="form-select pb-0" id="cmbEquipamentoEstadoHora" name="cmbEquipamentoEstadoHora" asp-items="@(new SelectList(string.Empty, "id", "nome"))">
                        </select>
                    </div>


                    <div class="mb-3">
                        <label for="valor" class="form-label">Valor</label>
                        <input type="number" class="form-control" id="valor" placeholder="Valor" name="valor" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" id="btn-criar-estado-hora" name="btn-criar-estado-hora">Salvar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Sair</button>
                </div>
            </div>
        </div>
    </div>

</div>
