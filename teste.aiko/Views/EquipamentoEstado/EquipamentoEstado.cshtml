<div class="container">

    <div class="mb-3">
        <div class="text-center pb-3">
            <h6 class="display-6">CRUD - Estado Equipamento</h6>
        </div>
    </div>

    <div class="row">
        <button type="button" class="btn btn-primary mb-3" id="btn-abrir-modal" name="btn-abrir-modal"> Criar Estado</button>

        <table class="table table-bordered table-hover table-sm" id="tblListaEquipamentoEstados">
            <thead>
                <tr>
                    <th>
                        Estado
                    </th>
                    <th>
                        Cor
                    </th>
                    <th>
                        Opção
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <!-- .modal -->
    <div class="modal fade" id="modal-criar-estado">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title text-center">Criar estado</h6>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="nome" placeholder="nome" name="nome">
                    </div>
                    <div class="mb-3">
                        <label for="cor" class="form-label">Cor</label>
                        <select class="form-select" name="cor" id="cor">
                            <option valeu="0" selected>Seleciona a cor</option>
                            <option value="#e74c3c" style="background-color: #e74c3c;">#e74c3c</option>
                            <option value="#2ecc71" style="background-color: #2ecc71;">#2ecc71</option>
                            <option value="#f1c40f" style="background-color: #f1c40f;">#f1c40f</option>
                            <option value="#2c1608" style="background-color: #2c1608;">#2c1608</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" id="btn-criar-estado" name="btn-criar-estado">Salvar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Sair</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/crud_equipamento_estados.js"></script>
}


